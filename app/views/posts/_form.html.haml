= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title, size: 100
  .field
    = f.label :body
    %br/
    = f.text_area :body, cols: 130, rows: 20
  %br
  .actions
    = f.submit 'Save & Publish', class: "btn btn-warning"
